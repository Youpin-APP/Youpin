<?xml version="1.0" encoding="utf-8"?>
<com.neu.youpin.location.LeftDeleteView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:deleteBtnWidth="80"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/LocaListLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginTop="19dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/LocaItemAddName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/LocaItemAddPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="136****1141"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/LocaItemAddDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="默认"
                android:visibility="invisible"
                android:textColor="@color/purple_font"
                android:background="@drawable/custom_button_loca_background"
                android:textSize="12sp"
                android:layout_gravity="bottom"/>
            <TextView
                android:id="@+id/LocaItemAddDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:text="辽宁省 沈阳市 浑南区 东北大学"
                android:textSize="13sp"
                android:layout_gravity="bottom"/>
            <ImageButton
                android:id="@+id/LocaItemButtonEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/address_edit"
                android:background="#00000000"
                android:layout_gravity="end"/>
        </FrameLayout>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_slice"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/LocaItemButtonDelete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/delete_red"
        android:orientation="vertical">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_delete"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_gravity="end"/>
    </RelativeLayout>
</com.neu.youpin.location.LeftDeleteView>