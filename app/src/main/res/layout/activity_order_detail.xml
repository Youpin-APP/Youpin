<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderDetail.OrderDetailActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/orderDetailBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_back"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/orderDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/rect_box"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/orderDetailIdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="订单编号: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/orderDetailIdTitle"
            android:layout_centerVertical="true"
            android:text="000000001"/>
        <TextView
            android:id="@+id/orderDetailPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/orderDetailPrice"
            android:layout_centerVertical="true"
            android:text="总金额: "/>
        <TextView
            android:id="@+id/orderDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/orderDetailPriceYuan"
            android:layout_centerVertical="true"
            android:text="1000"/>
        <TextView
            android:id="@+id/orderDetailPriceYuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="元"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderDetailList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:id="@+id/cartBottomBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="start"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cartCheckoutButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cart_checkout_button"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:text="去支付"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
</LinearLayout>