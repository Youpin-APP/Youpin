<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/rect_box">
    <TextView
        android:id="@+id/orderItemState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="完成"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/orderItemImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/item_img"
        android:layout_below="@+id/orderItemState"
        android:layout_marginEnd="20dp"/>
    <TextView
        android:id="@+id/orderItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="furry"
        android:layout_toEndOf="@id/orderItemImg"
        android:layout_alignTop="@id/orderItemImg"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/orderItemTotalPrice"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:text="合计\n11415元"
        android:textAlignment="center"
        android:layout_alignTop="@id/orderItemImg"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="#D0FFFFFF"/>

</RelativeLayout>